{% extends "layout.jinja2" %}
{% block main %}
<section class="hero is-medium is-warning">
  <div class="hero-body">
    <p class="title">
      Medium hero
    </p>
    <p class="subtitle">
      Medium subtitle
    </p>
  </div>
</section>
<section class="section has-background-info-light">
  <h1 class="title">Section</h1>
